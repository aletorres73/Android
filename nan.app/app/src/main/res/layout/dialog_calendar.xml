<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <TextView
        style="@style/calendar_dialog_title"
        android:text="@string/select_client_dialog" />

    <Spinner
        android:id="@+id/spinnerClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:backgroundTint="@color/color_buttons"
        android:dropDownWidth="match_parent"
        android:gravity="end"/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        app:dividerColor="@color/color_buttons" />

    <Button
        android:id="@+id/dialogButtonAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/button_add_dialog" />

    <Button
        android:id="@+id/dialogButtonRemove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/color_buttons"
        android:text="@string/button_remove_dialog" />


</LinearLayout>